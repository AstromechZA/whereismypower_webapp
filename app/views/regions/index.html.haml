- title 'Supported Regions'

.page-header
  %h1 Supported Regions

.row
  .col-md-6.col-md-offset-3
    %table.table.table-bordered
      %thead
        %tr
          %th Region
          %th Load Shedding?
          %th.thin Detail
      %tbody
        - unless @regions.empty?
          - @regions.each do |region|
            %tr
              %td= region.name
              %td
                = region.is_load_shedding ? 'Yes' : 'No'
                - if region.is_load_shedding
                  (
                  = region.active_schedule.name
                  )
              %td.thin= link_to 'Click here', show_region_path(region)
        - else
          %tr
            %td.text-center{colspan: 3}
              %h4 No Regions are supported yet :(
