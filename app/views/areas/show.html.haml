- title "#{@region.name} | #{@area.name}"

= render partial: 'layouts/loadshedding_warning', locals: {region: @region}

.page-header
  %h1
    = link_to @region.name, show_region_path(@region)
    |
    = link_to @area.name, show_area_path(@area)
  - unless @area.long_name.blank?
    %h3= @area.long_name

.row
  .col-md-6.col-md-offset-3.text-center
    - if @schedules.empty?
      %h4 There are no load shedding schedules for this area
    - else
      %h4 Pick a load schedding schedule to view:

      %table.table.table-bordered.text-left
        %thead
          %th Schedule
          %th Description
          %th{style: 'width:1%'} Show
        %tbody
          - @schedules.each do |area_schedule|
            %tr
              %td
                - if @region.active_schedule_id == area_schedule.schedule_id
                  %strong
                    = link_to "#{area_schedule.schedule.name} (current)", show_area_schedule_path(area_schedule)
                - else
                  = link_to area_schedule.schedule.name, show_area_schedule_path(area_schedule)
              %td= area_schedule.schedule.description
              %td{style: 'white-space: nowrap'}= link_to 'Click here', show_area_schedule_path(area_schedule)
