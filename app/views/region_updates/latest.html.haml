- title 'Latest Region Updates'

.page-header
  %h1 Latest Region Updates

.row
  .col-md-6.col-md-offset-3
    %table.table.table-bordered.table-condensed
      %thead
        %tr
          %th Time
          %th Region
          %th Load Shedding
          %th Schedule
      %tbody
        - unless @latest_updates.empty?
          - @latest_updates.each do |update|
            %tr
              %td= update.created_at
              %td= update.region.name
              %td= update.is_load_shedding_active ? 'Yes' : 'No'
              %td= update.active_schedule_name
        - else
          %tr
            %td.text-center{colspan: 3}
              %h4 No Region Updates have been performed yet :(
